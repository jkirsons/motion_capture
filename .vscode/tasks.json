    "version": "2.0.0",
    "tasks": [
        {
            "label": "sync to board",
            "type": "shell",
            "command": "rshell -p /dev/ttyUSB0 rsync src /pyboard"
        },
        {
            "label": "open rshell repl",
            "type": "shell",
            "command": "rshell -p /dev/ttyUSB0 -e nano repl"
        },
        {
            "label": "open rshell",
            "type": "shell",
            "command": "rshell -p /dev/ttyUSB0 -e nano"
        },
        {
            "label": "sync + run",
            "type": "shell",
            "command": "rshell -p /dev/ttyUSB0 -e nano repl",
            "dependsOn": ["sync to board"]
        },
        {
            "label": "flash",
            "type": "shell",
            "command": "esptool.py --chip esp32 --port /dev/ttyUSB0 erase_flash; esptool.py --chip esp32 --port /dev/ttyUSB0 --baud 460800 write_flash -z 0x1000 ~/Downloads/esp32-idf4-20200118-v1.12-68-g3032ae115.bin"
        }
    ]
}